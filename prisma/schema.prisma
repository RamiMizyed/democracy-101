// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Vote {
  id        String   @id @default(cuid())
  contentId String
  userId    String
  value     Int
  createdAt DateTime @default(now())

  @@unique([contentId, userId], name: "contentId_userId")
}
