generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}


model Vote {
  id        String   @id @default(cuid())
  contentId String
  userId    String
  value     Int      // 1 = up, -1 = down
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([contentId, userId]) // âœ… stops spam voting
  @@index([contentId])
}
